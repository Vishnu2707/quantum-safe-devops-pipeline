{
  "name": "PQC DevOps Codespace",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-azuretools.vscode-docker",
        "ms-python.python"
      ]
    }
  },
  "postCreateCommand": "bash -lc 'sudo apt-get update && sudo apt-get install -y build-essential cmake git pkg-config libssl-dev curl'"
}